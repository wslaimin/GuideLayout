<?xml version="1.0" encoding="utf-8"?>
<com.lm.guidelayout.GuideFrame xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_guide_left_arrow"
        app:closest="true"
        app:to_anchor="left_to_left|top_to_bottom" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_guide_tip_bg"
        app:layout_constraintTop_toBottomOf="@id/arrow1"
        app:layout_constraintLeft_toLeftOf="@id/arrow1"
        app:layout_constraintRight_toRightOf="@id/arrow1" />
</com.lm.guidelayout.GuideFrame>